{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "outDir": "dist",
      "sourceMap": true,
      "declaration": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "paths": {
        "*": [
          "node_modules/",
        ],
        "typings/*": [
          "src/typings/*"
        ]
      },
    },
    "include": [
      "**/*.ts"
    ],
    "exclude": [
      "src/test/**/*.spec.ts",
      "node_modules",
      "dist"
    ]
  }