{
  "extends": "../tsconfig.settings.json",

    "compilerOptions": {
      "outDir": "dist",
      "composite": true,
      "baseUrl": ".",
      "experimentalDecorators": true,
      "target": "es6",
      "paths": {
        "*": [
          "node_modules/",
        ],
        "typings/*": [
          "src/typings/*"
        ]
      },
    },
    "include": [
      "index.ts",
      "**/*.ts",
      "src/*.ts"
    ],
    "exclude": [
      "src/test/**/*.spec.ts",
      "node_modules",
      "dist"
    ]
  }